<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <RelativeLayout
                android:id="@+id/relative_layout_header_my_profile_fragment"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/image_view_avatar_my_profile_fragment"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/text_view_username_my_profile_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/image_view_avatar_my_profile_fragment"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/text_view_extra_info_my_profile_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_view_username_my_profile_fragment"
                    android:layout_toEndOf="@id/image_view_avatar_my_profile_fragment"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>