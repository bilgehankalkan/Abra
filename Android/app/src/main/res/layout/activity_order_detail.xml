<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/layout_order_info_item_order"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_date_item_order"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Monday"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageView
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/text_view_time_item_order"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="11:30"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_origin_item_order"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Istanbul"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/next"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/text_view_destination_item_order"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ankara"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:gravity="end"
        android:id="@+id/text_view_price_item_order"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:text="53"
        android:textColor="@color/colorSplashBackground"
        android:textSize="55sp" />

    <RelativeLayout
        android:layout_below="@id/text_view_price_item_order"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image_view_avatar_item_order"
            android:layout_centerVertical="true"
            android:layout_height="150dp"
            android:layout_width="150dp" />

        <TextView
            android:id="@+id/text_view_username_item_order"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/image_view_avatar_item_order"
            android:layout_width="wrap_content"
            android:text="User Surname"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/text_view_additional_info_item_order"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/image_view_avatar_item_order"
            android:layout_width="wrap_content"
            android:text="Additional Informations"
            android:textSize="22sp" />
    </RelativeLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/text_view_rating_average_item_order"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>