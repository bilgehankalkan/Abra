<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_origin_destination_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <android.support.v7.widget.SearchView
        android:id="@+id/search_view_origin_destination_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_origin_destination_fragment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_origin_destination_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignStart="@+id/search_view_origin_destination_fragment"
        android:layout_below="@+id/search_view_origin_destination_fragment"
        android:layout_alignBaseline="@id/card_view_continue_origin_destination_fragment"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_continue_origin_destination_fragment"
        style="@style/CardViewContinueTheme">

        <TextView
            style="@style/TextViewButtonTheme"
            android:text="@string/continue_text"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>